{
  "name": "sinon-jest-matchers",
  "version": "0.0.0-development",
  "description": "Jest matchers for sinon",
  "files": [
    "lib",
    "all.js",
    "types/index.d.ts"
  ],
  "main": "lib/index.js",
  "types": "types/index.d.ts",
  "scripts": {
    "prepare": "husky install",
    "build": "rm -rf lib && tsc -p tsconfig.build.json",
    "test": "jest",
    "test:types": "tsc --noEmit types/index.d.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "semantic-release": "semantic-release"
  },
  "peerDependencies": {
    "jest": ">=27.2.5",
    "sinon": "*"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@jest/types": "^27.1.1",
    "@types/jest": "^27.0.3",
    "@types/sinon": "^10.0.13",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "immutable": "^4.1.0",
    "jest": "^27.4.5",
    "jest-snapshot-serializer-ansi": "^1.0.0",
    "prettier": "^2.5.1",
    "semantic-release": "^19.0.3",
    "sinon": "^14.0.0",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "author": "Raz Luvaton",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rluvaton/sinon-jest-matchers/issues"
  },
  "homepage": "https://github.com/rluvaton/sinon-jest-matchers#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/rluvaton/sinon-jest-matchers.git"
  },
  "keywords": [
    "jest",
    "matchers",
    "extend",
    "extended",
    "test",
    "testing",
    "assertions",
    "sinon",
    "spy",
    "stub"
  ],
  "dependencies": {
    "@jest/expect-utils": "^29.0.3"
  }
}
